# --- Scalekit ---
SCALEKIT_ENV_URL=https://hey.scalekit.dev
SCALEKIT_CLIENT_ID=YOUR_SCALEKIT_CLIENT_ID
SCALEKIT_CLIENT_SECRET=YOUR_SCALEKIT_CLIENT_SECRET

# --- Service identifiers (the Scalekit “user identifiers” you authorized under) ---
# These can be different if Slack & HubSpot are connected to different accounts.
HUBSPOT_IDENTIFIER=your_hubspot_identifier
SLACK_IDENTIFIER=your_slack_identifier

# --- Digest behavior ---
DIGEST_LOOKBACK_HOURS=24
# Optional: Slack channel ID for the public summary (e.g., C01234567). Leave blank to skip channel post.
DIGEST_CHANNEL_ID=C09M2F3PQHY

# --- Files (you can keep defaults) ---
MAPPING_FILE=mapping.json
SNAPSHOT_FILE=deal_snapshot.json

