# Environment Configuration for Slack Triage Agent
# Copy this file to .env and fill in your actual values

# ============================================================================
# SCALEKIT CONFIGURATION
# Get these from: https://app.scalekit.com
# ============================================================================
SCALEKIT_ENV_URL=https://your-environment.scalekit.com
SCALEKIT_CLIENT_ID=your_client_id_here
SCALEKIT_CLIENT_SECRET=your_client_secret_here

# ============================================================================
# SLACK CONFIGURATION
# Get these from: https://api.slack.com/apps
# ============================================================================
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_BOT_TOKEN=xoxb-your-bot-token

# ============================================================================
# CHANNEL MANAGEMENT
# Comma-separated channel IDs (get from Slack channel details)
# ============================================================================
# Example: Only allow these channels
ALLOWED_CHANNELS=C01234567,C09876543

# Example: Explicitly deny these channels
DENIED_CHANNELS=C09999999

# ============================================================================
# GITHUB CONFIGURATION (Optional - can be set per-user in user_mapping.json)
# ============================================================================
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repo-name

# ============================================================================
# ZENDESK CONFIGURATION (Optional)
# ============================================================================
ZENDESK_SUBDOMAIN=your-company

# ============================================================================
# RETRY & RESILIENCE
# ============================================================================
RETRY_ATTEMPTS=3
RETRY_BACKOFF=1

# ============================================================================
# FLASK SERVER
# ============================================================================
FLASK_ENV=development
FLASK_PORT=5000
FLASK_HOST=0.0.0.0

# OAuth Redirect URI (MUST be whitelisted in Scalekit dashboard)
# Local dev: http://localhost:5000/auth/callback
# Production: https://your-domain.com/auth/callback
# Leave empty to auto-generate localhost URL
OAUTH_REDIRECT_URI=

# ============================================================================
# OPTIONAL: OpenAI for LLM-based routing
# Leave empty to use rule-based routing (keyword matching)
# ============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
